<div class="container">
  <div class="col">
    <h1>Add new restaurant</h1>
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :category, collection: Restaurant::CATEGORY, include_blank: false %>
      <%= f.input :phone_number %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
